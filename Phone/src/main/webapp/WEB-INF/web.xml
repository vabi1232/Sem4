<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>com.phone.phone.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/auth/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListPhoneServlet</servlet-name>
        <servlet-class>com.phone.phone.controller.ListPhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListPhoneServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreatePhoneServlet</servlet-name>
        <servlet-class>com.phone.phone.controller.CreatePhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreatePhoneServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DetailPhoneServlet</servlet-name>
        <servlet-class>com.phone.phone.controller.DetailPhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailPhoneServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeletePhoneServlet</servlet-name>
        <servlet-class>com.phone.phone.controller.DeletePhoneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePhoneServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>

</web-app>